{% extends 'pfeFrontBundle:Default:index.html.twig' %}
{% block titleh1 %} Ligne : {{ entity.nomLigne }} {% endblock %}
{% block breadcrumb %}
    {{ parent() }}
    <li>
        <a href="{{ path('ligne') }}">Ligne list</a>
    </li>
    <i class="fa fa-circle"></i>
    <li>
        <a href="#">Ligne : {{ entity.nomLigne }}</a>
    </li>
</li>
{% endblock %}
{% block body -%}
<div class="portlet light">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-bell-o"></i>   </div>
        <div class="tools">
            <a href="javascript:;" class="collapse">
            </a>
            <a href="#portlet-config" data-toggle="modal" class="config">
            </a>
            <a href="javascript:;" class="reload">
            </a>
            <a href="javascript:;" class="remove">
            </a>
        </div>
    </div>
    <div class="portlet-body">
        <div class="table-scrollable">
            <table class="table table-striped table-bordered table-advance table-hover">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Nomligne</th>
                    <td>{{ entity.nomLigne }}</td>
                </tr>
                <tr>
                    <th>Zone</th>
                    <td>{{ entity.zone }}</td>
                </tr>
                <tr>
                    <th>Superviseur</th>
                    <td>{{ entity.superviseur }}</td>
                </tr>
                <tr>
                    <th>Teamleader</th>
                    <td>{{ entity.teamleader }}</td>
                </tr>
                <tr>
                    <th>Objectifligne</th>
                    <td>{{ entity.objectifligne }}</td>
                </tr>
                </tbody>

            </table>
        </div>
        <a class="btn green-meadow" href="{{ path('ligne') }}">
            Back to the list
        </a>
        <a class="btn blue-hoki" href="{{ path('ligne_edit', { 'id': entity.id }) }}">
            Edit
        </a>
        {{ form(delete_form) }}
    </div>
</div>







{% endblock %}

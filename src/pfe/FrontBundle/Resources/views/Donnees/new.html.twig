                <option value="03-04">03-04</option>
                <option value="04-05">04-05</option>
                <option value="05-06">05-06</option>
            </select>
        </div>
        <div class="form-group form-md-line-input form-md-floating-label">
        {{ form_widget(form.nbrOp, { 'attr': {'class': 'form-control' } }) }}
            <label for="form_control_1">Nombre des opérateurs</label>
            <span class="help-block">Enter Nombre des opérateurs...</span>
        </div>
        <div class="form-group form-md-line-input form-md-floating-label">
        {{ form_widget(form.ligne, { 'attr': {'class': 'form-control' } }) }}
            <label for="form_control_1">ligne</label>
            <span class="help-block">Select ligne...</span>
        </div>
    <div class="form-group form-md-line-input form-md-floating-label">
    {{ form_widget(form.mudas_logistique, { 'attr': {'class': 'form-control' } }) }}
        <label for="form_control_1">Commentaire logistique</label>
        <span class="help-block">Enter Commentaire logistique...</span>
        </div>
        <div class="form-group form-md-line-input form-md-floating-label">
        {{ form_widget(form.mudas_maintenance, { 'attr': {'class': 'form-control' } }) }}
            <label for="form_control_1">Commentaire maintenance</label>
            <span class="help-block">Enter Commentaire logistique...</span>
        </div>
        <div class="form-group form-md-line-input form-md-floating-label">

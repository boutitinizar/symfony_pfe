            <span class="help-block">Enter Commentaire changement Réf...</span>
        </div>
        <div class="form-group form-md-line-input form-md-floating-label">
        {{ form_widget(form.mudas_divers, { 'attr': {'class': 'form-control' } }) }}
            <label for="form_control_1">Commentaire divers</label>
            <span class="help-block">Enter Commentaire changement divers...</span>
        </div>
        {{ form_widget(form._token) }}
        <div class="form-actions">
            <div class="row">
                <div class="col-md-offset-2 col-md-10">
                    {{ form_widget(form.save) }}
                    <input type="reset" class="btn" value="Reset" />
                </div>
            </div>
        </div>
 </form>
    </div>
    </div>
{% endblock %}
